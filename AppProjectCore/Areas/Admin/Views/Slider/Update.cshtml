@model AppProjectCore.Models.Slider

@{
    ViewData["Title"] = "Editar Slider";
}

<br />
<br />
<h3 class="text-center">Editar slider</h3>
<form method="post" asp-action="Update" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />

    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-7">
                    <label class="col-4">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-7">
                    <label class="col-4">
                        <label asp-for="Estado"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input asp-for="Estado"/>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mt-2">
                <div class="col-7">
                    <label class="col-7">
                        <label asp-for="ImagenUrl"></label>
                    </label>
                </div>
                <div class="col-7">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 ali mt-4 mb-4">
                    <button type="submit" class="btn btn-secondary form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class="col-2 mt-4">
                    <a asp-action="Index" class="btn btn-success form-control">Volver</a>
                </div>
            </div>
        </div>

        <div class="col-4 pt-3">
            <img src="@Model.ImagenUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>

    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.tiny.cloud/1/i6gtena4fh2m5ainibobj7zuj96erii3l0r4z40e4wj3fvq7/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: "textarea",
            plugins: "lists",
            menubar: "file edit format"
        });
    </script>
}


